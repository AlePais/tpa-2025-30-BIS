{{#*inline "pageTitle"}}MetaMapa{{/inline}}
{{#*inline "pageScripts"}}{{/inline}}
<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{> pageTitle}}</title>
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/7.2.0/mdb.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css">
  <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css"
        integrity="sha256-sA+4Z1cdq9VHtLt6wDkK06qvaChtwHf7T2v+3Ck0aoQ=" crossorigin="anonymous">
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body class="bg-light">
<header class="shadow-sm">
  <nav class="navbar navbar-expand-lg navbar-light bg-white">
    <div class="container py-2">
      <a class="navbar-brand fw-semibold" href="/">
        <i class="fa-solid fa-earth-americas me-2 text-primary"></i>MetaMapa
      </a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav"
              aria-controls="mainNav" aria-expanded="false" aria-label="Alternar navegación">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="mainNav">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <li class="nav-item">
            <a class="nav-link" href="/">
              <i class="fa-solid fa-layer-group me-1"></i>Colecciones
            </a>
          </li>
          {{#usuario}}
          <li class="nav-item">
            <a class="nav-link" href="/hechos/nuevo">
              <i class="fa-solid fa-circle-plus me-1"></i>Crear hecho
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/solicitudes/nueva">
              <i class="fa-regular fa-flag me-1"></i>Solicitud de eliminación
            </a>
          </li>
          {{/usuario}}
          {{#esAdmin}}
          <li class="nav-item">
            <a class="nav-link" href="/admin">
              <i class="fa-solid fa-gauge me-1"></i>Panel admin
            </a>
          </li>
          {{/esAdmin}}
        </ul>
        <div class="d-flex gap-2 align-items-center">
          {{#usuario}}
          <span class="text-muted">
            <i class="fa-regular fa-user me-1"></i>{{usuario.nombre}}
          </span>
          <form method="post" action="/logout" class="d-inline">
            <button type="submit" class="btn btn-outline-secondary btn-sm">
              <i class="fa-solid fa-right-from-bracket me-1"></i>Cerrar sesión
            </button>
          </form>
          {{/usuario}}
          {{^usuario}}
          <a class="btn btn-outline-primary btn-sm" href="/login">
            <i class="fa-solid fa-arrow-right-to-bracket me-1"></i>Ingresar
          </a>
          <a class="btn btn-primary btn-sm" href="/registro">
            <i class="fa-solid fa-user-plus me-1"></i>Registrarme
          </a>
          {{/usuario}}
        </div>
      </div>
    </div>
  </nav>
</header>
<main class="py-4">
  <div class="container">
    {{#flash}}
    <div class="alert alert-success alert-dismissible fade show" role="alert">
      <i class="fa-solid fa-circle-check me-2"></i>{{.}}
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Cerrar"></button>
    </div>
    {{/flash}}
    {{#error}}
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
      <i class="fa-solid fa-triangle-exclamation me-2"></i>{{.}}
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Cerrar"></button>
    </div>
    {{/error}}
    {{> @partial-block }}
  </div>
</main>
<footer class="bg-white border-top py-3">
  <div class="container d-flex justify-content-between align-items-center flex-column flex-md-row">
    <span class="text-muted">MetaMapa &middot; TPA DDSI 2025</span>
    <span class="text-muted small">
      <i class="fa-regular fa-compass me-1"></i>Arquitectura MVC cliente liviano
    </span>
  </div>
</footer>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/7.2.0/mdb.min.js"></script>
<script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"
        integrity="sha256-o9N1j7kGStNQ8gKa5r0bK7kCkQOoFd0zEtnxRPj0I0o=" crossorigin="anonymous"></script>
{{> pageScripts}}
</body>
</html>

{{#*inline "pageTitle"}}Nuevo hecho dinámico · MetaMapa{{/inline}}
{{#> layout}}
<section class="row justify-content-center">
  <div class="col-xl-8 col-lg-9">
    <div class="card border-0 shadow-sm">
      <div class="card-header bg-primary text-white py-3">
        <h2 class="h5 mb-0"><i class="fa-solid fa-circle-plus me-2"></i>Registrar un hecho dinámico</h2>
      </div>
      <div class="card-body p-4">
        <form method="post" action="/hechos" class="row g-3">
          <div class="col-12">
            <label for="coleccionId" class="form-label">Colección dinámica</label>
            <select id="coleccionId" name="coleccionId" class="form-select" required>
              <option value="" disabled selected>Seleccioná la colección</option>
              {{#colecciones}}
              <option value="{{id}}">{{titulo}}</option>
              {{/colecciones}}
            </select>
            {{^colecciones}}
            <div class="form-text text-danger">
              No hay colecciones dinámicas disponibles. Creá una desde el panel de administración.
            </div>
            {{/colecciones}}
          </div>
          <div class="col-md-6">
            <label for="titulo" class="form-label">Título</label>
            <input type="text" id="titulo" name="titulo" class="form-control" placeholder="Título del hecho" required>
          </div>
          <div class="col-md-6">
            <label for="categoria" class="form-label">Categoría</label>
            <input type="text" id="categoria" name="categoria" class="form-control" placeholder="Ambiental, salud..." required>
          </div>
          <div class="col-12">
            <label for="descripcion" class="form-label">Descripción</label>
            <textarea id="descripcion" name="descripcion" class="form-control" rows="4" placeholder="Detallá qué ocurrió" required></textarea>
          </div>
          <div class="col-md-6">
            <label for="fecha" class="form-label">Fecha y hora del hecho</label>
            <input type="datetime-local" id="fecha" name="fecha" class="form-control" required>
          </div>
          <div class="col-md-3">
            <label for="latitud" class="form-label">Latitud</label>
            <input type="text" id="latitud" name="latitud" class="form-control" placeholder="-34.60" required>
          </div>
          <div class="col-md-3">
            <label for="longitud" class="form-label">Longitud</label>
            <input type="text" id="longitud" name="longitud" class="form-control" placeholder="-58.38" required>
          </div>
          <div class="col-md-6">
            <label for="provincia" class="form-label">Provincia</label>
            <input type="text" id="provincia" name="provincia" class="form-control" placeholder="Provincia">
          </div>
          <div class="col-md-6">
            <label for="multimedia" class="form-label">Adjuntar contenido multimedia (opcional)</label>
            <input type="file" id="multimedia" name="multimedia" class="form-control" accept="image/*,video/*">
            <div class="form-text">Formatos admitidos: imágenes o videos cortos.</div>
          </div>
          <div class="col-12 d-grid">
            <button type="submit" class="btn btn-primary">
              <i class="fa-solid fa-paper-plane me-2"></i>Enviar para revisión
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</section>
{{/layout}}

{{#*inline "pageTitle"}}Detalle de estadísticas · MetaMapa{{/inline}}
{{#> layout}}
<section class="d-flex flex-column flex-md-row justify-content-between align-items-md-center mb-4 gap-3">
  <div>
    <h2 class="fw-bold text-primary mb-1">Detalle por tipo</h2>
    <p class="text-muted mb-0">Visualizá los registros para <strong>{{tipoSeleccionado}}</strong>.</p>
  </div>
  <div>
    <a class="btn btn-outline-secondary" href="/admin/estadisticas">
      <i class="fa-solid fa-arrow-left me-2"></i>Volver a estadísticas
    </a>
  </div>
</section>
<section class="card border-0 shadow-sm">
  <div class="card-header bg-white">
    <h3 class="h6 mb-0"><i class="fa-solid fa-database me-2 text-primary"></i>Historial de valores</h3>
  </div>
  <div class="table-responsive">
    <table class="table table-striped table-hover align-middle mb-0">
      <thead class="table-light">
        <tr>
          <th scope="col">Clave</th>
          <th scope="col">Valor</th>
          <th scope="col">Fecha de cálculo</th>
        </tr>
      </thead>
      <tbody>
      {{#estadisticas}}
        <tr>
          <td class="fw-semibold">{{clave}}</td>
          <td>{{valor}}</td>
          <td class="text-muted">{{fechaCalculo}}</td>
        </tr>
      {{/estadisticas}}
      {{^estadisticas}}
        <tr>
          <td colspan="3" class="text-center py-4 text-muted">
            <i class="fa-regular fa-face-smile-beam me-2"></i>No hay datos disponibles para este tipo.
          </td>
        </tr>
      {{/estadisticas}}
      </tbody>
    </table>
  </div>
</section>
{{/layout}}

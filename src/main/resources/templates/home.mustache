{{>partials/header}}
<section class="hero">
    <h1>Colecciones disponibles</h1>
    <p>Explorá fuentes, filtros y consensos curados por la comunidad MetaMapa.</p>
</section>
<section class="grid">
    {{#colecciones}}
    <article class="card">
        <h2>{{titulo}}</h2>
        <p>{{descripcion}}</p>
        <ul class="meta">
            <li><strong>Handle:</strong> {{handle}}</li>
            <li><strong>Criterio de consenso:</strong> {{criterioConsenso}}</li>
            <li><strong>Modo curado:</strong> {{#navegacionCurada}}Sí{{/navegacionCurada}}{{^navegacionCurada}}No{{/navegacionCurada}}</li>
            <li><strong>Hechos disponibles:</strong> {{cantidadHechos}}</li>
        </ul>
        <a class="button" href="/colecciones/{{id}}">Ver colección</a>
    </article>
    {{/colecciones}}
    {{^colecciones}}
    <p>No hay colecciones cargadas todavía.</p>
    {{/colecciones}}
</section>
{{>partials/footer}}
